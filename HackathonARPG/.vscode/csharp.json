    "Unity Singleton MonoBehaviour (UB)": {
        "prefix": "singleton",
        "body": [
            "using UnityEngine;",
            "",
            "namespace UB",
            "{",
            "    public class ${1:${TM_FILENAME_BASE}} : MonoBehaviour",
            "    {",
            "        public static ${1:${TM_FILENAME_BASE}} Instance { get; private set; }",
            "",
            "        private void Awake()",
            "        {",
            "            CreateInstance();",
            "        }",
            "",
            "        private void CreateInstance()",
            "        {",
            "            if (Instance == null) {",
            "                Instance = this;",
            "                DontDestroyOnLoad(gameObject);",
            "            }",
            "            else {",
            "                Destroy(gameObject);",
            "            }",
            "        }",
            "",
            "        ${0}",
            "    }",
            "}"
        ],
        "description": "Create a singleton MonoBehaviour class with UB namespace"
    },
