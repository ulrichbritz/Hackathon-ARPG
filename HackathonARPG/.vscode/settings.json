{
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.vs": true,
        "**/.gitmodules": true,
        "**/.vsconfig": true,
        "**/*.booproj": true,
        "**/*.pidb": true,
        "**/*.suo": true,
        "**/*.user": true,
        "**/*.userprefs": true,
        "**/*.unityproj": true,
        "**/*.dll": true,
        "**/*.exe": true,
        "**/*.pdf": true,
        "**/*.mid": true,
        "**/*.midi": true,
        "**/*.wav": true,
        "**/*.gif": true,
        "**/*.ico": true,
        "**/*.jpg": true,
        "**/*.jpeg": true,
        "**/*.png": true,
        "**/*.psd": true,
        "**/*.tga": true,
        "**/*.tif": true,
        "**/*.tiff": true,
        "**/*.3ds": true,
        "**/*.3DS": true,
        "**/*.fbx": true,
        "**/*.FBX": true,
        "**/*.lxo": true,
        "**/*.LXO": true,
        "**/*.ma": true,
        "**/*.MA": true,
        "**/*.obj": true,
        "**/*.OBJ": true,
        "**/*.asset": true,
        "**/*.cubemap": true,
        "**/*.flare": true,
        "**/*.mat": true,
        "**/*.meta": true,
        "**/*.prefab": true,
        "**/*.unity": true,
        "build/": true,
        "Build/": true,
        "Library/": true,
        "library/": true,
        "obj/": true,
        "Obj/": true,
        "Logs/": true,
        "logs/": true,
        "ProjectSettings/": true,
        "UserSettings/": true,
        "temp/": true,
        "Temp/": true
    },
    "dotnet.defaultSolution": "HackathonARPG.sln",
    // C# Formatting Settings to match your style
    "omnisharp.enableEditorConfigSupport": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    // C# specific formatting
    "[csharp]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    // C# Code Style Settings
    "dotnet.format.enable": true,
    "csharp.format.enable": true,
    // Brace style settings
    "csharp.newLine.braceControl": false,
    "csharp.newLine.braceMethod": true,
    "csharp.newLine.braceProperty": true,
    "csharp.newLine.braceAccessor": true,
    "csharp.newLine.braceAnonymousMethod": false,
    "csharp.newLine.braceAnonymousType": false,
    "csharp.newLine.braceInitializer": false,
    // Spacing settings
    "csharp.space.betweenEmptySquareBrackets": false,
    "csharp.space.betweenSquareBrackets": false,
    "csharp.space.afterKeywordsInControl": true,
    "csharp.space.betweenParentheses": false,
    "csharp.space.betweenMethodCallParentheses": false,
    "csharp.space.betweenMethodDeclarationParentheses": false,
    "csharp.space.afterComma": true,
    "csharp.space.afterSemicolon": true,
    "csharp.space.aroundBinaryOperator": "before_and_after",
    "csharp.space.aroundAssignmentOperator": "before_and_after"
}